{{#with bookData}}
  <h1>Edite o seu livro:</h1>
  <form action="/book/update" method="post" class="form">
    <input type="hidden" name="id" value="{{ id }}">
    <label for="title">Título</label>
      <input type="text" name="title" id="title" class="form-control" value="{{ title }}">
    <label for="pageqtd">Quantidade de páginas</label>
      <input type="text" name="pageqtd" id="pageqtd" class="form-control" value="{{ pageqtd }}">
    <input type="submit" value="Editar">
  </form>
{{/with}}