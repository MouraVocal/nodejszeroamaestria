<div class="container form-control m-3">
  <h1>Adicione um usuário</h1>
  <form action="/users/create" method="post">
    <div class="form-floating mb-3">
      <input type="text" name="name" id="name" class="form-control" placeholder="Digite o nome do usuário">
      <label for="name">Nome</label>
    </div>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" name="occupation" id="occupation" placeholder="Digite a profissão do usuário">
      <label for="occupation">Profissão</label>
    </div>
    <div class="form-check mb-3">
      <input type="checkbox" class="form-check-input mb-3" name="newsletter" id="newsletter" checked>
      <label class="form-check-label" for="newsletter">Enviar promocões?</label>
    </div>
    <input type="submit" class="btn btn-primary" value="Cadastrar">
  </form>
</div>