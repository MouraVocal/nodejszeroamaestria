{{#with user}}
  <div class="container form-control m-3">
    <h1>Editando usuário: {{name}}</h1>
    <form action="/users/update" method="post">
      <input type="hidden" name="id" value="{{id}}">
      <div class="form-floating mb-3">
        <input type="text" name="name" id="name" class="form-control" placeholder="Digite o nome do usuário" value="{{name}}">
        <label for="name">Nome</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" name="occupation" id="occupation" placeholder="Digite a profissão do usuário" value="{{occupation}}">
        <label for="occupation">Profissão</label>
      </div>
      <div class="form-check mb-3">
        {{#if newsletter}}
          <input type="checkbox" class="form-check-input mb-3" name="newsletter" id="newsletter" checked>
          <label class="form-check-label" for="newsletter">Enviar promocões?</label>
        {{else}}
          <input type="checkbox" class="form-check-input mb-3" name="newsletter" id="newsletter">
          <label class="form-check-label" for="newsletter">Enviar promocões?</label>
        {{/if}}
      </div>
      <input type="submit" class="btn btn-primary" value="Atualizar">
    </form>
  </div>
  <hr class="py-1">
  <div class="container form-control m-3">
    <h1>Cadastre um endereço</h1>
    <form action="/address/create" method="post">
      <input type="hidden" name="UserId" value="{{id}}">
      <div class="form-floating mb-3">
        <input type="text" name="city" id="city" class="form-control" placeholder="Digite o nome da cidade">
        <label for="name">Cidade</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" name="street" id="street" class="form-control" placeholder="Digite o nome da rua">
        <label for="name">Rua</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" name="number" id="number" placeholder="Digite o número">
        <label for="occupation">Número</label>
      </div>
      <input type="submit" class="btn btn-primary" value="Cadastrar Endereço">
    </form>
  </div>
  <hr class="py-1">
  {{#each Addresses}}
    <div class="container-fluid">
      <div class="card mb-3">
        <div class="card-body d-flex justify-content-between">
          <div>
            <span>Cidade: {{this.city}}</span>
            <p>Rua: {{this.street}} Número: {{this.number}}</p>
          </div>
          <div>
            <form action="/address/delete" method="post">
              <input type="hidden" name="id" value="{{this.id}}">
              <input type="hidden" name="UserId" value="{{this.UserId}}">
              <button type="submit" class="btn btn-danger">Deletar</button>
            </form>
          </div>
        </div>
      </div>
    </div>    
  {{/each}}
{{/with}}